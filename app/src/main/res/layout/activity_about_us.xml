<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".activities.AboutUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/about_to_home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Go  back to the homepage"
            android:textSize="40px"
            android:textColor="@color/primary"
            app:backgroundTint="@color/white" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="250px"
            android:paddingBottom="100px"
            android:text="Get to know us more!"
            android:textColor="@color/white"
            android:textSize="80px" />

        <TextView
            android:id="@+id/mission_textview"
            android:layout_width="770px"
            android:layout_height="wrap_content"
            android:background="@drawable/vision_missiom_textviews"
            android:gravity="center"
            android:paddingTop="200px"
            android:paddingBottom="200px"
            android:text="A world in which all people are comfortable and safe discussing their sexual harrasment stories."
            android:textColor="@color/black"
            android:textSize="60px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="150px"></TextView>

        <TextView
            android:id="@+id/vision_textview"
            android:layout_width="750px"
            android:layout_height="wrap_content"
            android:background="@drawable/vision_missiom_textviews"

            android:gravity="center"
            android:paddingTop="100px"
            android:paddingBottom="200px"
            android:text="A world in which all people feel comfortable and safe discussing their sexual haeassmwnt stories without the fear of shame, vulnerability, and lack of support"
            android:textColor="@color/black"
            android:textSize="60px" />

    </LinearLayout>
</ScrollView>